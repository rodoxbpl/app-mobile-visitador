<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amphora.activities.ItemAgendaActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Dados do Médico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#696969" />

            <TextView
                android:id="@+id/lblDados"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scrollbars="vertical"
                android:background="@drawable/text_view_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Material Divulgado"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#696969" />

            <TextView
                android:id="@+id/lblMaterial"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical"
                android:background="@drawable/text_view_style"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#B22222" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnIncluiMat"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_alignLeft="@+id/lblMaterial"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="42dp"
                android:background="@drawable/side_nav_bar"
                android:text="Incluir Material"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnIncluiHor"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_alignRight="@+id/lblMaterial"
                android:layout_alignTop="@+id/buttonMedicoAltera"
                android:layout_gravity="center"
                android:background="@drawable/side_nav_bar"
                android:text="Incluir Horários"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnAlteraHor"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:background="@drawable/side_nav_bar"
                android:text="Alterar Horário"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
