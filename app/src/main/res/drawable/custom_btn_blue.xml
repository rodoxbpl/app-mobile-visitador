<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000" />

            <gradient android:angle="-90" android:endColor="#339DFF" android:startColor="#3299CC" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#3299CC" />

            <solid android:color="#ADD7FF" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#3299CC" />

            <gradient android:angle="-90" android:endColor="#0A89FF" android:startColor="#3299CC" />
        </shape>
    </item>

</selector>