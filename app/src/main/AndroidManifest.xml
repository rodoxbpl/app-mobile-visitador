<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amphora.drawer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainDrawerAg"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrawerMedico"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".DrawerMaterial"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.amphora.activities.MenuActivity" />
        <activity android:name="com.amphora.activities.DetalhesMedicoActivity" />
        <activity android:name="com.amphora.activities.NovosHorariosActivity" />
        <activity android:name="com.amphora.activities.DetalhesMaterialActivity" />
        <activity android:name="com.amphora.activities.ItemAgendaActivity" />
        <activity android:name="com.amphora.activities.AlteraHorarioActivity" />
        <activity android:name="com.amphora.activities.ImportExportActivity"/>

    </application>

</manifest>